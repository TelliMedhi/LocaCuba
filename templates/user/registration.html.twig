{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}

    <div class="jumbotron text-center">
        <h1>Inscription</h1>
        <p>Inscrivez-vous pour avoir acces à la connection sur le site et toutes ces options</p>

    </div>
    {{form_start(form) }}

        <div class="row ">
            <div class="col-md-6 offset-md-3">

                {{form_row(form.username,{'label':'Nom d\'utilisateur','attr':{'placeholder': "nom d'utilisateur"}})}}

                {{form_row(form.email,{'label':'Adresse email','attr':{'placeholder': "adresse email"}})}}

                {{form_row(form.password,{'label':'Mot de passe','attr':{'placeholder': "mot de passe"}})}}

                {{form_row(form.confirm_password,{'label':'Confirmez le mot de passe','attr':{'placeholder': "répétez votre mot de passe"}})}}

                <button type="submit" class="btn btn-primary">Inscription</button>

            </div>
        </div>

    {{form_end(form)}}

{% endblock %}