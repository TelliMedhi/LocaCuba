{% extends 'base.html.twig' %}
{% block title 'Ce connecter' %}
{% block body %}
    <div class="jumbotron text-center">
        <h1>Connexion</h1>
        <p>Réservé aux administrateurs du site</p>

    </div>

    <div class="row ">

        <div class="col-md-12 offset-md-3">
            {% if error %}
                <div class="alert alert-danger col-6">
                    {{ error.messageKey }}
                </div>
            {% endif %}
            <form action="{{ path('login')}}" method="post">
                <div class="form-group col-6 ">
                    <input placeholder="Adress email..." id="email" required name="_username" type="text" class="form-control">
                </div>
                <div class="form-group col-6">
                    <input placeholder="mot de passe..." required name="_password" id="password" type="password" class="form-control">
                </div>
                <div class="form-group col-6">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>

        </div>
    </div>

{% endblock %}